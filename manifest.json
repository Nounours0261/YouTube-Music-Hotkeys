{
  "manifest_version": 3,
  "name": "YouTube Music Hotkeys",
  "description": "Add hotkeys to control playback on YouTube Music !",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "scripting",
    "webNavigation",
    "alarms"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Restart Hotkeys"
  },
  "host_permissions": [
    "https://music.youtube.com/*"
  ]
}
